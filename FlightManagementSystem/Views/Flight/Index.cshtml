@model IEnumerable<FlightManagementSystem.Models.Flight>
@{
    ViewData["Title"] = "Flight List";
}
<h1>Flights</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Flight</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Source</th>
            <th>Destination</th>
            <th>Departure</th>
            <th>Arrival</th>
            <th>Seats</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.Name</td>
                <td>@flight.Source</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime</td>
                <td>@flight.ArrivalTime</td>
                <td>@flight.AvailableSeats</td>
                @if (flight.IsCancelled)
                {
                    <td>Cancelled</td>
                }
                else
                {
                    <td>Available</td>
                }
                
                <td>
                    <a asp-action="Edit" asp-route-id="@flight.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@flight.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>