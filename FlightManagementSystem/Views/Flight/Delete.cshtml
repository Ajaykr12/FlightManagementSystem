@model FlightManagementSystem.Models.Flight

@{
    ViewData["Title"] = "Delete Flight";
}

<h2>Are you sure you want to delete this flight?</h2>

<div>
    <strong>Flight Name:</strong> @Model.Name <br />
    <strong>Source:</strong> @Model.Source <br />
    <strong>Destination:</strong> @Model.Destination <br />
    <strong>Departure Time:</strong> @Model.DepartureTime.ToString("MM/dd/yyyy HH:mm") <br />
    <strong>Arrival Time:</strong> @Model.ArrivalTime.ToString("MM/dd/yyyy HH:mm") <br />
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Flight")" class="btn btn-secondary">Cancel</a>
</form>
