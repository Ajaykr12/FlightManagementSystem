@model FlightManagementSystem.Models.Flight

@{
    ViewData["Title"] = "Create Flight";
}

<h1>Create Flight</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Flight Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>

    <div class="form-group">
        <label for="Source">Source</label>
        <input type="text" class="form-control" id="Source" name="Source" required />
    </div>

    <div class="form-group">
        <label for="Destination">Destination</label>
        <input type="text" class="form-control" id="Destination" name="Destination" required />
    </div>

    <div class="form-group">
        <label for="DepartureTime">Departure Time</label>
        <input type="datetime-local" class="form-control" id="DepartureTime" name="DepartureTime"  required />
    </div>

    <div class="form-group">
        <label for="ArrivalTime">Arrival Time</label>
        <input type="datetime-local" class="form-control" id="ArrivalTime" name="ArrivalTime" required />
    </div>

    <div class="form-group">
        <label for="AvailableSeats">Available Seats</label>
        <input type="number" class="form-control" id="AvailableSeats" name="AvailableSeats" required />
    </div>

    <div class="form-group">
        <label for="IsCancelled">Is Cancelled</label>
        <input type="checkbox" id="IsCancelled" name="IsCancelled"  />
    </div>

    <button type="submit" class="btn btn-primary">Create Flight</button>
</form>

<a href="@Url.Action("Index", "Flight")" class="btn btn-secondary mt-3">Back to Flight List</a>
