@model FlightManagementSystem.DTO.PassengerDTO

@{
    ViewData["Title"] = "Create Passenger";
}

<h1>Enter the details of Passenger</h1>

<form asp-action="Create" method="post">
    <input type="hidden" name="FlightId" value="@ViewBag.flightId" />
    @* <div class="form-group">
        <label asp-for="FlightId" class="control-label"></label>
        <input asp-for="FlightId" class="form-control" value="@ViewBag.flightId" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div> *@
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdentificationType" class="control-label"></label>
        <input asp-for="IdentificationType" class="form-control" />
        <span asp-validation-for="IdentificationType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdentificationNumber" class="control-label"></label>
        <input asp-for="IdentificationNumber" class="form-control" />
        <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        @if (User.FindFirst(claim => claim.Type == System.Security.Claims.ClaimTypes.Role)?.Value == "Admin")
        {
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        }
        else
        {
            <a href="@Url.Action("UserIndex")" class="btn btn-secondary">Back to List</a>
        }
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
